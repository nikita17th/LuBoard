<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/boxesContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.main.tabs.boardlist.BoardListFragment">

    <Button
        android:id="@+id/openBoardButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_board"
        app:layout_constraintBottom_toBottomOf="@id/openBoardButton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.351" />

    <Button
    android:id="@+id/openBoardButton2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/open_board"
    app:layout_constraintBottom_toBottomOf="@id/openBoardButton3"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/openBoardButton1" />

    <Button
        android:id="@+id/openBoardButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_board"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/openBoardButton2" />
</androidx.constraintlayout.widget.ConstraintLayout>
